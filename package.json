{
  "name": "mcp-css-first-monorepo",
  "private": true,
  "description": "Monorepo for MCP CSS First - intelligent CSS suggestions server",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luko248/css-first.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter @css-first/core build",
    "build:cli": "pnpm --filter @depthark/css-first build",
    "build:worker": "pnpm --filter @css-first/worker build",
    "dev": "pnpm -r dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "deploy:worker": "pnpm --filter @css-first/worker deploy",
    "publish:cli": "pnpm --filter @depthark/css-first publish"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
