{
  "name": "@depthark/css-first",
  "description": "Advanced MCP server for intelligent, context-aware CSS suggestions with logical units, container queries, and automated feature discovery",
  "license": "MIT",
  "version": "2.0.0",
  "bugs": {
    "url": "https://github.com/luko248/css-first/issues"
  },
  "homepage": "https://github.com/luko248/css-first#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luko248/css-first.git"
  },
  "keywords": [
    "css",
    "modelcontextprotocol",
    "mcp",
    "mdn",
    "web-development",
    "css-suggestions",
    "container-queries",
    "logical-units",
    "internationalization",
    "responsive-design",
    "css-automation",
    "semantic-analysis",
    "writing-mode",
    "rtl-support",
    "dynamic-viewport",
    "modern-css",
    "ai-css-assistant"
  ],
  "type": "module",
  "bin": {
    "css-first": "dist/cli.js"
  },
  "files": [
    "dist/cli.js",
    "README.md",
    "LICENSE"
  ],
  "main": "dist/cli.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "ncc build src/index.ts --minify --out dist/ && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/cli.js && chmod +x dist/cli.js",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@css-first/core": "workspace:*",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.7.3"
  }
}
